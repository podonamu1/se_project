pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'javac -encoding UTF-8 -d classes Practice/src/**/*.java'
            }
        }
        stage('Test') {
            steps {
                // 실제 경로로 대체
                def classpath = "classes;lib;C:\\Users\\User\\eclipse\\plugins\\junit-platform-console-standalone-1.7.1.jar"
                bat "java -cp %classpath% org.junit.platform.console.ConsoleLauncher --scan-classpath > test_results.txt"
            }
        }
    }
    post {
        always {
            archiveArtifacts 'test_results.txt'
        }
        failure {
            echo 'Build or test failed'
        }
        success {
            echo 'Build and test succeeded'
        }
    }
}

