pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'javac -encoding UTF-8 -d classes Practice/src/**/*.java'
            }
        }
	stage('Test') {
	    steps {
	        def classpath = "classes;lib/;
	        bat 'java -cp ${classpath} PerformanceTest > test_results.txt'
	    }
	}

    }
    post {
        always {
            archiveArtifacts 'test_results.txt'
        }
        failure {
            echo 'Build or test failed'
        }
        success {
            echo 'Build and test succeeded'
        }
    }
}
